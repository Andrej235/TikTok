<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TikTok</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.css">
</head>
<body>
    <div id="bg">
        <div id="user-profile-btn" class="icon fa fa-user"></div>

        <main>
            @RenderBody()
        </main>

        <div id="publish-popup">
            <img class="photo" draggable="false" src="" alt="Image not found" />
            <input type="text" class="caption-input-field" placeholder="Caption..." />
            <div class="random-photo-btn">
                <h1>Random</h1>
            </div>
            <div class="publish-btn">
                <h1>Publish</h1>
            </div>
        </div>

        <div id="profile-popup">
            <h1 id="profile-name"></h1>
            <div id="basic-info-wrapper">
                <div class="info-wrapper">
                    <h1 id="posts-info-value" class="value"></h1>
                    <h2 class="category">Posts</h2>
                </div>

                <div class="info-wrapper">
                    <h1 id="comments-info-value" class="value"></h1>
                    <h2 class="category">Comments</h2>
                </div>

                <div class="info-wrapper">
                    <h1 id="likes-info-value" class="value"></h1>
                    <h2 class="category">Likes</h2>
                </div>
            </div>
            <div id="navigation-menu">
                <div id="published-posts" class="icon fa fa-bars-staggered"></div>
                <div id="plus-btn" class="icon fa fa-plus"></div>
                <div id="liked-posts" class="icon fa fa-heart"></div>
            </div>
            <div id="post-grid"></div>

            <div id="log-out-btn" class="fa-solid fa-arrow-right-from-bracket"></div>

            <div id="log-in-screen">
                <h1 id="log-in-title">Login</h1>
                <div id="input-fields-wrapper">
                    <input id="name-field" class="input-field" type="text" placeholder="Name" />
                    <input id="email-field" class="input-field active" type="text" placeholder="Email" />
                    <input id="password-field" class="input-field active" type="password" placeholder="Password" />
                    <input id="repeat-password-field" class="input-field" type="password" placeholder="Repeat Password" />
                    <div id="log-in-btn">
                        <h1>Login</h1>
                    </div>
                </div>
                <h1 id="register-change-state-btn">Register</h1>
            </div>
        </div>
    </div>


    <template id="post-box-row-template">
        <div class="post-box-row"></div>
    </template>

    <template id="post-box-image-template">
        <img src="" alt="Image not found" class="post-box-image" />
    </template>

    <script src="~/js/layoutLogic.js"></script>
</body>
</html>
